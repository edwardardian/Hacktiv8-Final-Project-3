<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_margin="1dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="1dp"
            android:backgroundTint="@color/button"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnAnswer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/button"
            android:text="Answer"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAngka1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="1"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonAngka"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnAngka2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="2"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonAngka"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnAngka3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="3"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonAngka"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnPembagian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="/"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonOperator"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAngka4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="4"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonAngka"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnAngka5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="5"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonAngka"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnAngka6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="6"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonAngka"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnPengurangan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="-"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonOperator"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAngka7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="7"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonAngka"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnAngka8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="8"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonAngka"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnAngka9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="9"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonAngka"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnPerkalian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="x"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonOperator"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTitik"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="."
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonAngka"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="0"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonAngka"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnPersen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="%"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonOperator"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnPertambahan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="1dp"
            android:text="+"
            android:textColor="@color/white"
            android:backgroundTint="@color/buttonOperator"
            android:textSize="20dp"/>

    </LinearLayout>


</LinearLayout>